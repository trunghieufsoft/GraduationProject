@{
    ViewBag.Title = "Category";
    ViewBag.activeBill = "active";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section JavaScript{
    <script src="~/assets/client/app/billController.js"></script>
}
<!--articles-->
<div class="container">
    <div class="row articles">
        <!-- list category order -->
        <div class="col-md-12 white-bg">
            <div class="col-md-12" style="background: #fff">
                <div style="margin-top: 15px">
                    <p class="box-title">Thông tin đơn hàng</p>
                </div>
                <!-- /.box-header -->
                <div class="box-body table-responsive no-padding">
                    <table class="table table-striped table-bordered table-hover" style="font-size: 13px;">
                        <thead>
                            <tr role="row">
                                <th style="text-align: center;">Mã đơn hàng</th>
                                <th style="text-align: center;">Tên khách hàng</th>
                                <th style="text-align: center;">Giá</th>
                                <th style="text-align: center;">Địa chỉ giao hàng</th>
                                <th style="text-align: center;">Ngày tạo</th>
                                <th style="text-align: center;">Chức năng</th>
                            </tr>
                        </thead>
                        <tbody id="table-data"></tbody>
                    </table>
                </div>
                <!-- /.box-body -->
                <div class="box-footer clearfix">
                    <div class="row">
                        <div class="col-sm-6">
                            <p style="float: left;margin-top: -10px!important;"><span id="table-info"></span></p>
                        </div>
                        <div class="col-sm-6 pagination-ul">
                            <ul id="pagination" class="pagination-sm no-margin pull-right" style="margin-bottom: 15px!important;margin: 0;"></ul>
                        </div>
                    </div>
                </div>
                <!--articles-->
            </div>
        </div>
    </div>
</div>
<!--end-prize-->
<!-- /.box -->

<script id="data-template" type="x-tmpl-mustache">
    <tr id="row-{{BillID}}">
        <td>{{BillID}}</td>
        <td>{{CustomerName}}</td>
        <td>{{TotalPrice}}</td>
        <td>{{DeliveryAddress}}</td>
        <td>{{CreatedAt}}</td>
        <td>
            @if (ViewBag.IsUser)
            {
                <span class="{{Class}}">{{Status}}</span>
            }
            else
            {
                <a href="#" data-id="{{BillID}}" class="btn btn-status {{Class}}">{{Status}}</a>
            }
        </td>
    </tr>
</script>