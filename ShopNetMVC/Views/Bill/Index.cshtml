@{
    ViewBag.Title = "Category";
    ViewBag.activeBill = "active";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section JavaScript{
    <script src="~/assets/client/app/billController.js"></script>
}
<!--articles-->
<div class="container">
    <div class="row articles">
        <!-- list category order -->
        <div class="col-md-9 white-bg">
            <div class="col-md-12" style="background: #fff" id="contact-right">
                <div>
                    <p class="box-title">Thông tin đơn hàng</p>
                </div>
                <!-- /.box-header -->
                <div class="box-body table-responsive no-padding">
                    <table class="table table-striped table-bordered table-hover" style="font-size: 13px;">
                        <thead>
                            <tr role="row">
                                <th style="text-align: center; width: 4%">Stt</th>
                                <th style="text-align: center; width: 13%">Mã đơn hàng</th>
                                <th style="text-align: center; width: 17%">Tên khách hàng</th>
                                <th style="text-align: center; width: 12%">Tổng giá</th>
                                <th style="text-align: center; width: 24%">Địa chỉ giao hàng</th>
                                <th style="text-align: center; width: 20%">Thời gian tạo</th>
                                <th colspan="2" style="text-align: center; width: 10%">Chức năng</th>
                            </tr>
                        </thead>
                        <tbody id="table-data"></tbody>
                    </table>
                </div>
                <!-- /.box-body -->
                <div class="box-footer clearfix">
                    <div class="row">
                        <div class="col-sm-6">
                            <p style="float: left;margin-top: -10px!important;"><span id="table-info"></span></p>
                        </div>
                        <div class="col-sm-6 pagination-ul">
                            <ul id="pagination" class="pagination-sm no-margin pull-right" style="margin-bottom: 15px!important;margin: 0;"></ul>
                        </div>
                    </div>
                </div>
                <!--articles-->
            </div>
        </div>
        <div class="col-md-3 shop-sidebar">
            <div class="sidebar-widgets">
                @{Html.RenderAction("RightCategory", "Category");}
                <div class="shop-widget">
                    <h4>được yêu thích</h4>
                    <ul class="popular-product">
                        @for (var i = 0; i < @ViewBag.Length; i++)
                        {
                            <li>
                                <img src="@ViewBag.Related[@i].ImageUrl" alt="@ViewBag.Related[@i].ProdName" style="width: 50px;height: 50px;margin: 0;">
                                <div>
                                    <h6><a href="/product/detail?code=@ViewBag.Related[@i].Code">@ViewBag.Related[@i].ProdName</a></h6>
                                    <span>@ViewBag.listPrice[@i] đồng</span>
                                </div>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!--end-prize-->
<!-- /.box -->

<script id="data-template" type="x-tmpl-mustache">
    <tr id="row-{{BillID}}">
        <td>{{Stt}}</td>
        <td>{{BillID}}</td>
        <td style="text-transform: capitalize;">{{CustomerName}}</td>
        <td>{{TotalPrice}}</td>
        <td>{{DeliveryAddress}}</td>
        <td>{{CreatedAt}}</td>
        <td> <span data-id="{{BillID}}" class="btn btn-info"><i class="fa fa-eye" title="xem chi tiết đơn hàng"></i></span></td>
        <td>
            @if (ViewBag.IsUser)
            {
                <span class="btn {{Class}}">{{{Status}}}</span>
            }
            else
            {
                <span data-id="{{BillID}}" class="btn btn-status {{Class}}">{{{Status}}}</span>
            }
        </td>
    </tr>
</script>

<script id="detail-template" type="x-tmpl-mustache">
    <tr>
        <td>{{Stt}}</td>
        <td><img style="width: 100px; height: 100px;" src="{{ImageUrl}}" /></td>
        <td>{{ProdName}}</td>
        <td>{{Cost}}</td>
        <td>{{Count}}</td>
        <td>{{Price}}</td>
    </tr>
</script> 