@model IEnumerable<Models.DataAccess.ProductRequestDto>
@{
    ViewBag.Title = ViewBag.Category.CateName;
    ViewBag.activeMenu = "active";
}

<div class="page-title">
    <div class="container">
        <div class="row">
            <div class="col-md-10 produti">
                <h4 style="display: inline-block">Menu</h4>
                <ul style="display: inline-block; font-size: 13px;">
                    <li style="display: inline-block"><a style="color: #e3d5ba;" href="/">Trang chủ /</a></li>
                    <li style="display: inline-block"><a style="color: #e3d5ba;" href="/category?code=@ViewBag.Category.CodeName">@ViewBag.Category.CateName (@ViewBag.ProductCount)</a></li>
                </ul>
            </div>
            <div class="col-md-2 cart">
                <h4><a href="/cart">Giỏ hàng (@ViewBag.SessionCart items)</a></h4>
            </div>
        </div>
    </div>
</div>
<!-- shop-page -->
<div class="container">
    <div class="row content">
        <div class="col-md-9 shop-section">
            <!--articles-->
            <div class="row articles">
                @for (var i = 0; i < @ViewBag.Length; i++)
                {
                    <div class="col-md-4 col-sm-4 itemProduct">
                        <a href="/product/detail?code=@ViewBag.Model[@i].Code">
                            <img src="@ViewBag.Model[@i].ImageUrl" alt="@ViewBag.Model[@i].ProdName" style="width: 100%;height: 257px">
                            <div class="text">
                                <span>
                                    @ViewBag.Model[@i].ProdName
                                </span>
                                <p>
                                    @ViewBag.listPrice[@i] đồng
                                </p>
                            </div>
                        </a>
                    </div>
                }
            </div>
        </div>
        <!--end-articles-->
        <div class="col-md-3 shop-sidebar">
            <div class="sidebar-widgets">
                @{Html.RenderAction("RightCategory", "Category");}
            </div>
        </div>
    </div>
</div>
<!--prize-->