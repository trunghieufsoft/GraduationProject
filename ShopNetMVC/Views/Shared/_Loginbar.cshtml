@{
    if (ViewBag.UserName == string.Empty)
    {
        <li class="ms-show">
            <a href="/user/login">Login</a>
        </li>
        <li>|</li>
        <li class="ms-show">
            <a href="/user/register">Register</a>
        </li>
    }
    else
    {
        <li class="ms-show">
            Xin chào @ViewBag.UserName
        </li>
        <li>
            <a href="/user/logout">Log out</a>
        </li>
    }
}
