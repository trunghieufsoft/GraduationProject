@using System.Globalization
@model Models.DataAccess.ProductRequestDto

@{
    ViewBag.Title = ViewBag.ProductName;
    ViewBag.activeHome = "active";
    ViewBag.activeMenu = "";
    ViewBag.activeCart = "";
    ViewBag.activeAbout = "";
    ViewBag.activeContact = "";
}

@section css{
    <link href="~/assets/client/css/comment.css" rel="stylesheet" />
}

@section JavaScript{
    <script src="~/assets/client/app/addCart.js"></script>
    <script src="~/assets/client/app/productController.js"></script>
}

<div class="page-title">
    <div class="container">
        <div class="row">
            <div class="col-md-10 produti">
                <h4 style="display: inline-block">@Model.ProdName</h4>
                <ul style="display: inline-block; font-size: 13px;">
                    <li style="display: inline-block"><a style="color: #e3d5ba;" href="/">Trang chủ /</a></li>
                    <li style="display: inline-block"><a style="color: #e3d5ba;" href="/">Menu</a></li>
                </ul>
            </div>
            <div class="col-md-2 cart">
                <h4><a href="/cart">Giỏ hàng (@ViewBag.SessionCart items)</a></h4>
            </div>
        </div>
    </div>
</div>
<!-- shop-page -->
<div class="container content">
    <div class="row">
        <div class="col-md-9 white-bg">
            <!-- Single Product -->
            <div class="single-product col-md-12">
                <div class="col-md-6">
                    <br>
                    <img src="@Model.ImageUrl" alt="img" style="width: 100%;height: 250px">
                </div>
                <div class="product-details col-md-6">
                    <h1>@Model.ProdName</h1>
                    @{
                        CultureInfo cul = CultureInfo.GetCultureInfo("vi-VN");   // try with "en-US"
                        string price = double.Parse(Model.Cost.ToString()).ToString("#,###", cul.NumberFormat).Replace(".", ",");
                    }
                    <p class="price">
                        Giá : @ViewBag.Price đồng
                    </p>
                    <p>
                        @Html.Raw(Model.Decription)
                    </p>
                    <input type="number" name="productId" hidden value="@Model.ProdID" id="productId" />
                    <input type="number" name="quantity" value="1" class="qty" min="1" max="100" required>
                    <button type="button" class="btn btn-primary" data-id="@Model.ProdID" id="btn-order" style="margin-left: 10px">
                        <i class="fa fa-shopping-cart"> Thêm vào giỏ hàng</i>
                    </button>
                    <hr>

                    <div class="reviews">
                        <ul>
                            <li><a href="#"><i class="fa fa-star"></i></a></li>
                            <li><a href="#"><i class="fa fa-star"></i></a></li>
                            <li><a href="#"><i class="fa fa-star"></i></a></li>
                            <li><a href="#"><i class="fa fa-star"></i></a></li>
                            <li><a href="#"><i class="fa fa-star-o"></i></a></li>
                        </ul>
                    </div>
                </div>
                <!-- End Single Product -->
            </div>

            <div class="col-md-12 tabs">
                <ul class="nav nav-tabs">
                    <li class="active"><a data-toggle="tab" href="#feedback">Đánh giá</a></li>
                    <li><a data-toggle="tab" href="#comment">Bình luận</a></li>
                </ul>

                <div class="tab-content">
                    <div id="feedback" class="tab-pane fade in active">
                        <div class="row">
                            <hr />
                            <div class="col-sm-4">
                                <div class="rating-block">
                                    <h4>Đánh giá trung bình</h4>
                                    <h2 class="bold padding-bottom-7">4.3 <small>/ 5</small></h2>
                                    <button type="button" class="btn btn-warning btn-sm" aria-label="Left Align">
                                        <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
                                    </button>
                                    <button type="button" class="btn btn-warning btn-sm" aria-label="Left Align">
                                        <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
