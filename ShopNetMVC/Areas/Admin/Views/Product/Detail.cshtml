@model Models.DataAccess.ProductRequestDto
@{
    ViewBag.Title = "Chi tiết sản phẩm";

}
@section header{
    <h1>Chi tiết sản phẩm</h1>
    <ol class="breadcrumb">
        <li><a href="/admin"><i class="fa fa-dashboard"></i>Trang chủ</a></li>
        <li><a href="/admin/product">Sản phẩm</a></li>
        <li class="active">Chi tiết</li>
    </ol>
}
<div class="row">
    <!-- left column -->
    <div class="col-md-6 col-md-offset-3">
        <!-- general form elements -->
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Thông tin Tài khoản</h3>
            </div>
            <!-- /.box-header -->

            <!-- form start -->

            <div class="box-body">
                <div class="form-group">
                    @Html.LabelFor(model => model.ProdID)
                    @Html.TextBoxFor(model => model.ProdID, new { @class = "form-control", @disabled = "disabled" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.ProdName)
                    @Html.TextBoxFor(model => model.ProdName, new { @class = "form-control", @disabled = "disabled" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Code)
                    @Html.TextBoxFor(model => model.Code, new { @class = "form-control", @disabled = "disabled" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Cost)
                    @Html.TextBoxFor(model => model.Cost, new { @class = "form-control", @disabled = "disabled" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.ImageUrl)
                    <img class="center-block img-responsive" src="@Html.DisplayFor(model=>model.ImageUrl)" style=" height: 300px;" />
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Decription)
                    @Html.TextAreaFor(model => model.Decription, new { @class = "form-control", @disabled = "disabled", @id = "txtContent" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.isActive)
                    <div class="checkbox">
                        <label>
                            @Html.CheckBoxFor(model => model.isActive, new { @disabled = "disabled" })
                            Kích hoạt
                        </label>
                    </div>
                </div>
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                @Html.ActionLink("Về trang chủ", "Index", new object { }, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
</div>